<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
  <div class="well shaddowed">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <h1>Edit extra charge</h1>
        <%= form_for @extra_charge do |f| %>
          <div class="form-group">
            <div><%= f.label :description %></div>
            <div><%= f.text_field :description, class: "form-control input-sm" %></div>
          </div>
          <div class="form-group">
            <div><%= f.label :price  %></div>
            <div><%= f.text_field :price, class: "form-control input-sm" %></div>
          </div>
          <div><%= f.submit "Save Changes", class: "btn btn-sm red-button" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
