<div class="col-lg-12 col-md-12">
  <div class="well shaddowed">
    <div class="row" align="center">
    <h1>Admin's menu</h1>
      <div class="col-lg-8 col-lg-offset-2 ">
        <%= link_to "Customers List", users_path, class: "btn btn-primary btn-sm" %>
        <%= link_to "Add new admin", new_admin_path, class: "btn btn-primary btn-sm" %> 
        <%= link_to(messages_path, class: "btn btn-primary btn-sm") do %>
          Messages  
          <% if @new_messages > 0 %>
            &nbsp;&nbsp;<span class="badge"><%= @new_messages %></span>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6" align="center">
        <h3>Future Trips</h2>
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>ID</th>
                <th>Pick up Date/Time</th>
                <th>From</th>
                <th>Destination</th>
                <th>Contact name</th>
              </tr>
            </thead>
            <tbody>
              <% @future_trips.each do |trip| %>
                <tr class="<%= trip.payment_information && (trip.driver_information && !trip.driver_information.empty?)  ? nil : 'danger'%>">
                  <td><%= trip.id %></td>
                  <td><a href="<%= user_trip_path(trip.user_id, trip.id) %>"><%= trip.pickup_time.strftime("%a %b/%e/%Y - %T") %></a></td>
                  <td><%= trip.pick_up %></td>
                  <td><%= trip.drop_off %></td>
                  <td><%= trip.contact_name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-lg-6" align="center">
        <h3>Past Trips</h2>
        <div class="table-responsive">
          <table class="table table-condensed">
            <thead>  
              <tr>
                <th>ID</th>
                <th>Pick up Date/Time</th>
                <th>From</th>
                <th>Destination</th>
                <th>Contact name</th>
              </tr>
            </thead>
            <tbody>
              <% @past_trips.each do |trip| %>
                <tr>
                  <td><%= trip.id %></td>
                  <td><a href="<%= user_trip_path(trip.user_id, trip.id) %>"><%= trip.pickup_time.strftime("%a %b/%e/%Y - %T") %></a></td>
                  <td><%= trip.pick_up %></td>
                  <td><%= trip.drop_off %></td>
                  <td><%= trip.contact_name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
