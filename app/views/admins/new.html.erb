<div class="col-lg-6 col-lg-offset-3 col-md-10 col-md-offset-1">
  <div class="well shaddowed">
    <h1>Create new admin</h1>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <%= form_tag(controller: "admins", action: "create", method: "post")  do %>
          <div class="form-group">
            <div><%= label_tag "admin_name" %></div>
            <%= text_field :admin, :name, class: "form-control input-sm" %>
          </div>   
          <div class="form-group">
            <div><%= label_tag "admin_email" %></div>
            <%= email_field :admin, :email, class: "form-control input-sm" %>
          </div>  
          <div class="form-group">
            <div><%= label_tag "admin_phone" %></div>
            <%= phone_field :admin, :phone, class: "form-control input-sm" %>
          </div>  
          <div>
            <%= submit_tag "Add Admin", class: "btn btn-sm red-button" %> 
          </div>
        <% end %>
      </div> 
    </div>
  </div>
</div>
