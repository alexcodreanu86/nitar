<div class="col-lg-8 col-lg-offset-2">
  <div class="well shaddowed">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="col-lg-6">
        <div class="form-group"><%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control input-sm"%></div>

        <div class="form-group"><%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, class: "form-control input-sm"%></div>

        <div class="form-group"><%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control input-sm"%></div>

      </div>

      <div class="col-lg-6">
      
        <div class="form-group"><%= f.label :phone, "Phone Number" %><br/>
        <%= f.telephone_field :phone, class: "form-control input-sm" %></div>

        <div class="form-group"><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" , class: "form-control input-sm"%></div>

        <div class="form-group"><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control input-sm"%></div>

      <div class="form-group"><%= f.submit "Sign up", class: "red-button btn btn-sm right sign-up" %></div>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
