<div class="col-lg-10 col-lg-offset-1">
  <div class="well shaddowed">
    <h1>Customers:</h1>
    <div class="table-responsive">
      <table class="table table-condensed table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Created Account on</th>
            <th>Phone #</th>
            <th>Buttons</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, user_path(user) %></td>
              <td><%= user.created_at.strftime("%b/%e/%Y") %></td>
              <td><%= user.phone %></td>
              <td><%= link_to "Delete", user_path(user), data: {confirm: "Are you sure you want to delete this account?"}, method: "DELETE", class: "btn btn-xs btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>