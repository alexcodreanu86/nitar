<div class="col-lg-8 col-lg-offset-2 col-md-10">
  <div class="well shaddowed">
    <div class="row" align="center">
      <div class= "col-lg-10 col-lg-offset-1">
        <h2>Messages</h2>
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>Sent on Date/Time</th>
                <th>Sender email</th>
                <th>Subject</th>
              </tr>
            </thead>
            <tbody>
              <% @messages.each do |message| %>
                <tr class="<%= message.was_answered ? nil : 'danger' %>">
                  <td><%= message.created_at.strftime("%a %b/%e/%Y - %T") %></td>
                  <td><%= message.sender_email %></td>
                  <td><%= link_to  message.subject[0..30] + "...", message_path(message) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
